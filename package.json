{
  "name": "ts-app",
  "version": "1.0.0",
  "description": "Boilerplate project for a TypeScript API (Express, tsoa) + UI (React/TSX)",
  "repository": "https://github.com/lukeautry/ts-app",
  "author": "Luke Autry <lukeautry@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:api": "yarn tsc -p ./api/tsconfig.json",
    "start:api": "yarn build:api && node ./api/dist/server.js",
    "tsoa:gen": "yarn tsoa swagger -c ./api/tsoa.json && yarn tsoa routes -c ./api/tsoa.json",
    "start:web": "cross-env TS_NODE_PROJECT=./web/tsconfig.json webpack-dev-server --config web/webpack.config.ts"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.16.0",
    "@types/extract-text-webpack-plugin": "^3.0.3",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/method-override": "^0.0.31",
    "@types/node": "^10.12.9",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/webpack": "^4.4.19",
    "@types/webpack-dev-server": "^3.1.1",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "express": "^4.16.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "method-override": "^3.0.0",
    "node-sass": "^4.10.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tsoa": "^2.2.5",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
