{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "target": "esnext",
    "removeComments": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true
  }
}
